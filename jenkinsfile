pipeline {
    agent any
    environment {
      PROJECT_NAME = "Demonstration pipeline"
      OWNER_NAME   = "Student-SS-2021"
    }

    stages {
        stage('1-Build') {
            steps {
                echo "Start first Building..."
                echo "It`s first: ${PROJECT_NAME}!"
                echo "Owner is: ${OWNER_NAME}"
                echo "Building......."
                echo "End first Building..."
            }
        }
        stage('2-Git configuration') {
            git branch: "master", git credentialsId: 'jenkins-github', url: 'git@github.com:OlesYudin/Demo.git'
        }
        stage('3-SSH') {
            steps {
                sshPublisher(publishers: [sshPublisherDesc(configName: 'Webserver', transfers: [sshTransfer(cleanRemote: false, excludes: '', execCommand: '', execTimeout: 120000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '', remoteDirectorySDF: false, removePrefix: '', sourceFiles: '**/*')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: false)])
            }
        }
        stage('3-Deploy') {
            steps {
                echo "Start of Stage Deploy..."
                echo "Deploying......."
                sh "ls -la"
                sh '''
                   echo "Line1"
                   echo "Line2"
                '''
                echo "End of Stage Build..."
            }
        }	
    }
}
